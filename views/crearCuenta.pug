doctype html
html(lang="en")
    head
        include partials/header
    body.login
        .contenedor-formulario 
            h1 Crea tu cuenta en UpTask 

            //- if errores
            //-     each error in errores
            //-         p.error.alerta= error.message
            if locals.mensajes
                .alertas    
                    each categoria in Object.keys(locals.mensajes)
                        each error in mensajes[categoria]
                            .alerta(class=`${categoria}`)
                                p= error
                
            form#formulario.caja.caja-login(method="POST" action="/crear-cuenta") 
                .campo 
                    label(for="email") Correo electrónico: 
                    input(type="email" name="email" placeholder="Tu correo electrónico" value= email)
                .campo 
                    label(for="password") Contraseña: 
                    input(type="password" name="password" placeholder="Tu contraseña" value= password)
                .campo.enviar 
                    input.boton(type="submit" value="Crear cuenta")
                .campo 
                    a(href="/iniciar-sesion") Volver a iniciar sesión                